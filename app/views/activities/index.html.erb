<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li> <i class="icon-home home-icon"></i>
      <%= link_to "活动管理", activities_path%>
      <span class="divider"> <i class="icon-angle-right arrow-icon"></i>
      </span>
    </li>
    <li class="active">总览</li>
  </ul>
</div>

<div class="page-content">

  <a href="<%= new_activity_path %>
    " class="btn btn-app btn-primary no-radius btn-small">
    <i class="icon-edit small-125"></i>
    新活动
  </a>

  <h3 class="header smaller lighter green"></h3>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>名称</th>
        <th>内容</th>
        <th>开始日期</th>
        <th>结束日期</th>
        <th>创建者</th>
        <th>发布</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @activities.each do |activity| %>
      <tr>
        <td>
          <%= activity.name %></td>
        <td>
          <%= activity.content %></td>
        <td>
          <%= activity.start_time %></td>
        <td>
          <%= activity.end_time %></td>
        <td>
          <%= activity.author_name %></td>
        <td>
          <% if activity.published %>
            <span style="color:green"><%= activity.published.to_cn%></span>  
          <% else %>  
            <span style="color:red"><%= activity.published.to_cn%></span>  
          <% end -%>  
        </td>
        <td>
          <div class="hidden-phone visible-desktop btn-group">
            <a href="<%= activity_path(activity)%>" class="btn btn-mini btn-success">
              <i class="icon-ok bigger-120"></i>
            </a>

            <a href="<%= edit_activity_path(activity) %>" class="btn btn-mini btn-info">
              <i class="icon-edit bigger-120"></i>
            </a>

            <a href="<%= activity_rewards_path(activity) %>" class="btn btn-mini btn-purple">
              <i class="icon-cloud-upload bigger-120"></i>
            </a>

            <a href="<%= activity_tickets_path(activity)%>" class="btn btn-yellow btn-mini">
              <i class="icon-shopping-cart bigger-120"></i>
            </a>

            <%= link_to activity, method: :delete, :class => "btn btn-mini btn-danger", data: { confirm: '确定删除?' } do %> 
              <i class="icon-trash bigger-120"></i>
            <% end -%>
          </div>

        </td>
        <!-- <td>
        <%= link_to 'Show', activity %></td>
      -->
      <!-- <td>
      <%= link_to 'Edit', edit_activity_path(activity) %></td>
    -->
    <!-- <td>
    <%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  -->
  <!-- </tr>
  -->
  <% end %></tbody>
</table>

<br></div>