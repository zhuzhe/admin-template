
<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li> <i class="icon-home home-icon"></i>
      <a href="<%= activities_path%>">活动管理</a>

      <span class="divider"> <i class="icon-angle-right arrow-icon"></i>
      </span>
    </li>
    <li> <i class="icon-home home-icon"></i>
      <a href="<%= activity_path(@activity) %>"><%= @activity.name%></a>

      <span class="divider"> <i class="icon-angle-right arrow-icon"></i>
      </span>
    </li>
    <li class="active">奖品</li>
  </ul>
</div>

<div class="page-content">

  <a href="<%= new_activity_reward_path(@activity) %>
    " class="btn btn-app btn-primary no-radius btn-small">
    <i class="icon-edit small-125"></i>
    创建
  </a>

  <h3 class="header smaller lighter green"></h3>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>名称</th>
        <th>简介</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @rewards.each do |reward| %>
      <tr>
        <td>
          <%= reward.name %></td>
        <td>
          <%= reward.desc %></td>
        <td>
          <div class="hidden-phone visible-desktop btn-group">
            <a href="<%= reward_path(reward)%>" class="btn btn-mini btn-success">
              <i class="icon-ok bigger-120"></i>
            </a>

            <a href="<%= edit_reward_path(reward) %>" class="btn btn-mini btn-info">
              <i class="icon-edit bigger-120"></i>
            </a>

            <%= link_to reward, method: :delete, :class => "btn btn-mini btn-danger", data: { confirm: '确定删除?' } do %> 
              <i class="icon-trash bigger-120"></i>
            <% end -%>
          </div>

        </td>

  <% end %></tbody>
</table>

<br></div>