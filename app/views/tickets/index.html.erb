
<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li> <i class="icon-home home-icon"></i>
      <%= link_to "活动管理", activities_path %>
      <span class="divider"> <i class="icon-angle-right arrow-icon"></i>
      </span>
    </li>

    <li> <i class="icon-home home-icon"></i>
      <%= link_to @activity.name, @activity %>
      <span class="divider"> <i class="icon-angle-right arrow-icon"></i>
      </span>
    </li>
    <li class="active">奖券</li>
  </ul>
</div>

<div class="page-content">

  <a href="<%= new_activity_ticket_path(@activity) %>
    " class="btn btn-app btn-primary no-radius btn-small">
    <i class="icon-edit small-125"></i>
    新奖券
  </a>

  <h3 class="header smaller lighter green"></h3>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>唯一编号</th>
        <th>领奖人</th>
        <th>是否兑换</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tickets.each do |ticket| %>
      <tr>
        <td>
          <%= ticket.uid %></td>
        <td>
          <%= ticket.phone %></td>
        <td>
          <%= ticket.is_used %></td>
        <td>
          <div class="hidden-phone visible-desktop btn-group">
            <a href="<%= ticket_path(ticket)%>" class="btn btn-mini btn-success">
              <i class="icon-ok bigger-120"></i>
            </a>

            <a href="<%= edit_ticket_path(ticket) %>" class="btn btn-mini btn-info">
              <i class="icon-edit bigger-120"></i>
            </a>

            <%= link_to ticket, method: :delete, :class => "btn btn-mini btn-danger", data: { confirm: '确定删除?' } do %> 
              <i class="icon-trash bigger-120"></i>
            <% end -%>
          </div>

        </td>
  <% end %></tbody>
</table>

<br></div>
